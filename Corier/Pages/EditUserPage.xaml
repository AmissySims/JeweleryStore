<Page x:Class="Corier.Pages.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Corier.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditUserPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="5"
                    VerticalAlignment="Center">
            <Image 
                   Width="250"
                   Height="250"
                   
                   RenderOptions.BitmapScalingMode="Fant">
                <Image.Source>
                    <Binding Path="Photo">
                        <Binding.TargetNullValue>
                            <BitmapImage UriSource="\Resources\logo.png"/>
                        </Binding.TargetNullValue>
                    </Binding>
                </Image.Source>
            </Image>
            <Button x:Name="AddImageBt" Content=" Изменить фото "
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MainBt}" 
                    Click="AddImageBt_Click"/>

        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                    Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя"
                                   Margin="5"/>
                <TextBox Text="{Binding LastName}"
                         PreviewTextInput="TextBox_PreviewTextInput"
                          Margin="5"
                         Width="200"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фамилия"
                                   Margin="5"/>
                <TextBox Text="{Binding FirstName}"
                          Margin="5"
                         PreviewTextInput="TextBox_PreviewTextInput"
                          Width="200" />

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Отчество"
                                   Margin="5"/>
                <TextBox Text="{Binding MiddleName}"
                         PreviewTextInput="TextBox_PreviewTextInput"
                          Margin="5"
                         Width="200"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Телефон"
                                   Margin="5"/>
                <TextBox Text="{Binding Phone}"
                                   Margin="5"
                             Width="200"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин"
                                   Margin="5"/>
                <TextBox Text="{Binding Login}"
                                   Margin="5"
                             Width="200"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль"
                                   Margin="5"/>
                <TextBox Text="{Binding Password}"
                                   Margin="5"
                             Width="200"/>

            </StackPanel>

            <Button x:Name="SaveBt"
                            Content=" Сохранить "
                            Style="{StaticResource MainBt}"
                    Margin="5" Click="SaveBt_Click"/>
            <Button x:Name="CancelBt"  Content=" Отмена "
                            Style="{StaticResource MainBt}"
                    Margin="5" Click="CancelBt_Click"/>

        </StackPanel>
    </Grid>
</Page>
